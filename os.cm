#include user_programs/user_programs.cm
#include std_lib/std_lib.cm

int main() {

    // Clear out memory

    int i = 0;
    while (i < MEMORY_SIZE) {
        *i = 0;
    }

    // Keyboard read loop
    while(1) {
        keyboard = read_char();

        // New input
        if (keyboard != 0) {
            // Output the character
            // (Note that this should cut keyboard to char length)
            print_c(keyboard);
        }
    }

}
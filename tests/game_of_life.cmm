

int print_buffer(char* buffer) {

    int i = 0;
    while (i < 1200) {
        int color;
        if (buffer[i]) {
            color = 0x0300;
        } else {
            color = 0x0000;
        }

        asm("vgaw $, $, 0" i color);
        i = i + 1;
    }
}

int main() {
    char buffer[1200];

    buffer[42] = 1;
    buffer[83] = 1;
    buffer[121] = 1;
    buffer[122] = 1;
    buffer[123] = 1;
    
    print_buffer(buffer);
}
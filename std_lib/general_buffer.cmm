
// Size of the general buffer
int GENERAL_BUFFER_SIZE = 2048;

// General buffer size 2kib
char general_buffer[2048];

/*  Clear general buffer - sets the general_buffer to 0

    Returns:
     void -
*/
int clear_general_buffer() {

    int i = 0;
    while (i < GENERAL_BUFFER_SIZE) {
        general_buffer[i] = 0;
        i = i + 1;
    }
}